<RootWidget>:
    orientation: 'vertical'
    ActionBar:
        background_color:0,191,255,0.5
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'M083140005'
                with_previous: False
            ActionOverflow:
            ActionButton:
                text: 'LOAD'
                on_release: root.show_load()
            ActionButton:
                text: 'RESET'
                on_release: root.reset_canvas()
            ActionButton:
                text: 'RUN'
            ActionButton:
                text: 'OUTPUT'
            ActionButton:
                text: 'QUIT'
                on_release: root.quit()
    CustomBtn:

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
